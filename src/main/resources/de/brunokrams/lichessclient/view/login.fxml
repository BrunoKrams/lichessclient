<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressIndicator?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            stylesheets="@lichess-theme.css"
            fx:controller="de.brunokrams.lichessclient.controller.LoginController">
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button text="Login with Lichess" styleClass="default-button" onAction="#login"/>
        <ProgressIndicator fx:id="progressIndicator" visible="false"/>
    </StackPane>
</AnchorPane>